[user]
	name = chrispaganon
	email = info@chrispaganon.com

[safe]
	directory = /etc/etcfiles
	directory = ~/Documents

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[include]
	path = ~/.themes.gitconfig

[delta]
	dark = true
	navigate = true    # use n and N to move between diff sections
	side-by-side = true
	line-numbers = true
	features = chameleon
	hyperlinks = true
	# hyperlinks-file-link-format = "vscode://file{path}:{line}"

[merge]
	conflictstyle = diff3
